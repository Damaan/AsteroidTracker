@{
	ViewData["Title"] = "Login";
}
<section class="ftco-section">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-6 text-center mb-5">
				<h2 class="heading-section">Asteroid Tracker</h2>
			</div>
		</div>
		<div class="row justify-content-center">
			<div class="col-md-7 col-lg-5">
				<div class="wrap">
					<div class="login-wrap p-4 p-md-5">
						<div class="d-flex">
							<div class="w-100">
								<h3 class="mb-4">Login</h3>
							</div>
						</div>
						<form onsubmit="return Login(event)" class="signin-form">
							<div class="form-group mt-3">
								<input id="mail-field" type="email" class="form-control" required>
								<label class="form-control-placeholder" for="username">Username</label>
							</div>
							<div class="form-group">
								<input id="password-field" type="password" class="form-control" required>
								<label class="form-control-placeholder" for="password">Password</label>
								<span id="pass-toggle" class="fa fa-fw fa-eye field-icon toggle-password"></span>
							</div>
							<div class="form-group">
								<button type="submit" class="form-control btn btn-primary rounded submit px-3">Login</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>